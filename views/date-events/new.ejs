<%- include ('../partials/head.ejs') %>

<div class="container">
    <h1>Add new date</h1>
    <form>
        <div class="form-floating mb-4">
            <select class="custom-select">
                <option selected>Select who you went on the date with</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
              </select>
        </div>
        <div class="form-floating mb-4">
            <input class="form-control" type="text" id="text" id="name">
            <label class="form-label" for="name">Name</label>
        </div>
    
        <div class="form-floating mb-4">
            <input class="form-control" type="text" id="text" id="nickname">
            <label class="form-label" for="nickname">Nickname</label>
        </div>
    
        <div class="form-check form-switch -lg mb-3" >
            <input class="form-check-input" type="checkbox" id="wantToSeeAgain">
            <label for="wantToSeeAgain">Want to see again?</label>
        </div>
    
        <input class="btn btn-primary mb-3" type="submit" value="Add date"/>
    
    </form>

</div>

