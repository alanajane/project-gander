<%- include ('../partials/head.ejs') %>

<div class="container">
  <h1>Profiles</h1>


  <nav class="nav nav-tabs flex-column flex-sm-row">
    <a class="flex-sm-fill text-sm-center nav-link active" href="#">Current</a>
    <a class="flex-sm-fill text-sm-center nav-link" href="#">In the past</a>
  </nav>

  <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Nickname</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for (let datingProfile of datingProfiles) { %>
          <tr>
            <td><a href="profiles/<%= datingProfile.id %>"><%= datingProfile.name %></a></td>
            <td><%= datingProfile.nickname %></td>
            <td><a href="profiles/<%= datingProfile.id %>/edit">Edit</a></td>
            <td>
              <form action="profiles/<%= datingProfile.id %>?_method=DELETE" method="post">
              <input type="submit" value="Delete" />
              </form>
            </td>
          </tr>
        <% } %>
    </tbody>
  </table>

</div

